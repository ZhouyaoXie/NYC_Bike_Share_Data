   "source": [
    "# Assume we have a df as dataset of NTA stations\n",
    "df = pd.DataFrame()\n",
    "nta_sort_lat = df.sort_values(df['latitude']) # ascending\n",
    "nta_sort_long = df.sort_values(df['longitude']) # ascending\n",
    "\n",
    "def binary_search(value, lst):\n",
    "    l = len(lst)\n",
    "    if len(lst) == 2:\n",
    "        if abs(value-lst[0])<abs(value-lst[1]):\n",
    "            idx = 0\n",
    "        else:\n",
    "            idx = 1\n",
    "        return idx\n",
    "    if value < lst[int(l/2)]:\n",
    "        idx = binary_search(value, lst[:int(l/2)+1])\n",
    "    elif value > lst[int(l/2)]:\n",
    "        idx = int(l/2) + binary_search(value, lst[int(l/2):])\n",
    "    else:\n",
    "        idx = int(l/2)\n",
    "        return idx\n",
    "    return idx\n",
    "\n",
    "def distance(tup1, tup2):\n",
    "    return abs(tup1[0]-tup2[0])+abs(tup1[1]-tup2[1])\n",
    "\n",
    "def find_k_stations(station_id, k):\n",
    "    lat = df[df['station_id']==station_id]['latitude']\n",
    "    long = df[df['station_id']==station_id]['longitude']\n",
    "    lat_idx = binary_search(lat, nta_sort_lat['latitude'])\n",
    "    if lat_idx-2 < 0:\n",
    "        stations_on_lat = [[nta_sort_lat['station_id'][i],distance((lat,long),(nta_sort_lat['latitude'][i],nta_sort_lat['longitude'][i]))] for i in range(lat_idx, lat_idx+5)]\n",
    "    elif lat_idx+2 >= len(nta_sort_lat['station_id']):\n",
    "        stations_on_lat = [[nta_sort_lat['station_id'][i],distance((lat,long),(nta_sort_lat['latitude'][i],nta_sort_lat['longitude'][i]))] for i in range(lat_idx-5, lat_idx)]\n",
    "    else:\n",
    "        stations_on_lat = [[nta_sort_lat['station_id'][i],distance((lat,long),(nta_sort_lat['latitude'][i],nta_sort_lat['longitude'][i]))] for i in range(lat_idx-2, lat_idx+3)]\n",
    "    long_idx = binary_search(lat, nta_sort_lat['longitude'])\n",
    "    if long_idx-2 < 0:\n",
    "        stations_on_long = [[nta_sort_long['station_id'][i],distance((lat,long),(nta_sort_long['latitude'][i],nta_sort_long['longitude'][i]))] for i in range(lat_idx, lat_idx+5)]\n",
    "    elif lat_idx+2 >= len(nta_sort_lat['station_id']):\n",
    "        stations_on_long = [[nta_sort_long['station_id'][i],distance((lat,long),(nta_sort_long['latitude'][i],nta_sort_long['longitude'][i]))] for i in range(lat_idx-5, lat_idx)]\n",
    "    else:\n",
    "        stations_on_long = [[nta_sort_long['station_id'][i],distance((lat,long),(nta_sort_long['latitude'][i],nta_sort_long['longitude'][i]))] for i in range(lat_idx-2, lat_idx+3)]\n",
    "    \n",
    "    stations = stations_on_lat.extend(stations_on_long)\n",
    "    stations = sorted(stations, key=lambda x:x[1])\n",
    "    return [stations[i][0] for i in range(k)]\n",
    "\n",
    "\n",
    "    \n",
    "    \n",
    "        \n"
   ]
  },
